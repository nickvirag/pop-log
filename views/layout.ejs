<!DOCTYPE html>
<html>
	<head>
		<title><%= process.env.WEB_TITLE || 'ðŸ’©log' %></title>
		<link href="https://fonts.googleapis.com/css?family=Questrial" rel="stylesheet" type="text/css">
		<link href="https://fonts.googleapis.com/css?family=Lobster" rel="stylesheet" type="text/css">
		<link href="/stylesheets/font-awesome.min.css" rel="stylesheet">
		<link href="/stylesheets/style.css" rel="stylesheet">
		<link href="/javascripts/jquery-ui-1.11.4/jquery-ui.min.css" rel="stylesheet">
		<script type="text/javascript" charset="utf8" src="/javascripts/jquery-2.1.4.min.js"></script>
		<script type="text/javascript" charset="utf8" src="/javascripts/jquery.dataTables.min.js"></script>
		<script type="text/javascript" charset="utf8" src="/javascripts/jquery-ui-1.11.4/jquery-ui.min.js"></script>
		<script>
		$(function() {
			$('#menuButton').on('click', function(event) {
				$('.navbar').toggleClass('visible');
				event.preventDefault();
			});
		});
		</script>
	</head>
	<body>
			<div id="banner">
				<div id="bannerContents">
					<div class="headerLeft">&nbsp;</div>
					<div class="headerCenter"><%= typeof organization != 'undefined' ? organization.displayName.toUpperCase() + ' - ' + organization.designation.toUpperCase() : '' %></div>
					<div class="headerRight">
						<a class="fa fa-bars iconButton" id="menuButton" href="#"></a>
						<a class="fa fa-gear iconButton" href="/settings"></a>
						<a class="fa fa-sign-out iconButton" href="/logout"></a>
					</div>
				</div>
				<div style="clear: both;"></div>
			</div>
			<div class="navbar">
				<div id="bannerTitleContainer">
					<div id="bannerTitleContents">
						<div id="bannerTitleNestedContents">
							<span id="bannerTitle"><%= process.env.WEB_TITLE || 'ðŸ’©log' %></span>
						</div>
					</div>
				</div>
				<% if (user) { %>
				<% if (user.organization) { %>
				<a class="navPanel" href="/user">
					<div class="navPanelContainer">
						<%= user.isAdmin ? 'USERS' : 'HOME' %>
					</div>
				</a>
				<!--
				<a class="navPanel" href="/category">
					<div class="navPanelContainer">
						YOUR CATEGORY
					</div>
				</a>
				<a class="navPanel" href="/library">
					<div class="navPanelContainer">
						LIBRARY
					</div>
				</a>
				-->
				<!-- <a class="navPanel" href="/settings">
					<div class="navPanelContainer">
						<span class="fa fa-gear"></span>
					</div>
				</a>
				<% } %>
				<a class="navPanel" href="/logout">
					<div class="navPanelContainer">
						<span class="fa fa-sign-out"></span>
					</div>
				</a> -->
				<% } %>
			</div>

			<div class="contentContainer">
				<div class="content-wrapper" id="content">
					<% if (!user) { %>
					<div style="text-align: center">
						<a href="/auth/google"><img src="/images/btn_google_signin_dark_normal_web.png" alt="Login with Google"></a>
					</div>
					<% } %>
					<%- body %>
				</div>
		</div>
	</body>
</html>
